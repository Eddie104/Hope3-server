{
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-bitwise": 0,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/jsx-no-undef": 2,
        "react/react-in-jsx-scope": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            0
        ]
    },
    "plugins": [
        "react"
    ],
    "extends": "eslint-config-egg"
}